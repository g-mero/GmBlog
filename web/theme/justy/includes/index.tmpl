{{range .arts}}
<div class="card mb-3 shadow-sm">
    <A class="stretched-link" href="/article/{{.ID}}" role="button">
        <div class="row g-0">
            <div class="col-md-7">
                <div class="card-body d-flex flex-column h-100">
                    <h5 class="card-title">{{.Title}}</h5>
                    <p class="card-text text-truncate" style="height: auto">
                        {{.Desc}}
                    </p>
                    <p class="card-text mt-auto">
                        <small class="text-muted">{{FormatTime .CreatedAt}}</small>
                    </p>
                </div>
            </div>
            <div class="col-md-5 overflow-hidden d-none d-md-block">
                <img src="/theme/justy/assets/img/img-loading.gif"
                    data-src='/theme/justy/assets/img/art/{{RandInt 16}}.webp' class="card-img rounded lazy-load"
                    alt="..." style="height:250px;object-fit: cover"
                    onerror="this.src='/theme/justy/assets/img/img-404.gif';this.onerror=null" />
            </div>
        </div>
    </A>
</div>
{{end}}

